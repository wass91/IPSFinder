<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :identificacion %><br />
    <%= f.text_field :identificacion, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :telefono %><br />
    <%= f.text_field :telefono, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"Correo Electronico"%><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :contraseña %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :confirmar_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "usuarios/shared/links" %>
